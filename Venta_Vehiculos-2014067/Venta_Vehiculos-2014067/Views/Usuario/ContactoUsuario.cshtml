
@{
    ViewBag.Title = "Contacto";
}

<h2>Contacto</h2>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("iSHOP CAR", "IndexUsuario", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("INICIO", "IndexUsuario", "Usuario")</li>
                <li>@Html.ActionLink("VEHICULOS", "VehiculoUsuario", "Usuario")</li>
                <li>@Html.ActionLink("VENTAS", "VehiculoUsuario", "Usuario")</li>
                <li>@Html.ActionLink("COMPRAS", "VehiculoUsuario", "Usuario")</li>
                <li>@Html.ActionLink("CONTACTANOS", "ContactoUsuario", "Usuario")</li>
                <li role="presentation" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        @Session["nombreUsuario"] <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li> @Html.ActionLink("Cerrar Sesion", "Logout", "Cuenta")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
@if (Session["nombreUsuario"] != null)
{
    <h2>Bienvenido @Session["nombreUsuario"] a la área de servicio al cliente</h2>
    <div class="page-header">
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/Imagenes/llamada.jpg" alt="...">
                <div class="caption">
                    <h3>Llámanos</h3>
                    <p>PBX:</p>
                    <p>2234 - 0304</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/Imagenes/facebook.png" alt="...">
                <div class="caption">
                    <h3>Facebook</h3>
                    <p>Buscanos en facebook como:</p>
                    <p>iSHOP CAR</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/Imagenes/whatsapp.png" alt="...">
                <div class="caption">
                    <h3>WhatsApp</h3>
                    <p>Ahora con nuestra nueva vía de comunicación:</p>
                    <p>Contactanos al: 4670 - 6029</p>
                </div>
            </div>
        </div>
    </div>
}

