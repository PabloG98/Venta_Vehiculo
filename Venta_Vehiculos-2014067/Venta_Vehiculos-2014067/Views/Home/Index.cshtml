
@{
    ViewBag.Title = "Admon. iSHOP CAR";
}

<h2>INICIO</h2>
@if (Session["nombreUsuario"]!=null){
    <h2>Bienvenido @Session["nombreUsuario"] al panel de administración de iSHOP CAR</h2>
    <div class="page-header">
        <h1>Inicio<small> Panel de Administración</small></h1>
    </div>
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Imagenes/ventas.jpg" alt="...">
                    <div class="caption">
                        <h3>Compra - Venta</h3>
                        <p>En esta opción puede administrar vehiculos</p>
                        <p>@Html.ActionLink("Ver Compra - Venta", "Index", "Vehiculo")</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Imagenes/carr.jpg" alt="...">
                    <div class="caption">
                        <h3>Vehiculos</h3>
                        <p>En esta opción puede administrar vehiculos</p>
                        <p>@Html.ActionLink("Ver vehiculos", "Index", "Vehiculo")</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Imagenes/marcas.jpg" alt="...">
                    <div class="caption">
                        <h3>Marcas</h3>
                        <p>En esta opción puede administrar vehiculos</p>
                        <p>@Html.ActionLink("Ver marcas", "Index", "Marca")</p>
                    </div>
                </div>
            </div>
        </div>
    

}
else
{
    <h2>Por favor inicie sesion</h2>
    @Html.ActionLink("Iniciar Sesion","Login","Cuenta")
}

